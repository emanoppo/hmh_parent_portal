<div class="row">
  <div class="small-12 columns center_text top-text">
      <%= Time.now.strftime("%B %d") %> <i class="fi-calendar"></i>
  </div>
  <%- @sections.each do |section| %>
    <div class="small-12 columns top-text">
      <div class="button expand">
        <% if current_user.role == "Teacher" %>
          <%= link_to section.name, section_students_path(section) %>
        <% else %>
          <%= link_to section.name, student_path(@student) %>
        <% end %>
      </div>
    </div>
  <!-- <a href="#" class="button"></a> -->
  <%- end %>
</div>
